<h1>Questions for Election: <%= @election.title %></h1>

<table class="table">
  <tr>
    <th>Ballot Question List</th>
    <th>Edit Question</th>
    <th>Delete Question</th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= link_to question.question, question %></td>
    <td>Edit</td>
    <td><%= link_to 'Delete', question, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
